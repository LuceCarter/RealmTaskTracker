<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="realm_tutorial_dotnet.ProjectPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="14" CornerRadius="0">
            <Label Text="My Projects" HorizontalTextAlignment="Center" TextColor="White" FontSize="20" FlexLayout.AlignSelf="Start"/>
        </Frame>
       <ScrollView>
           <ListView x:Name="listProjects" ItemsSource="{Binding MyProjects}" >
               <ListView.ItemTemplate>
                  <DataTemplate>
                    <TextCell Tapped="TextCell_Tapped" Text="{Binding Name}" />
                  </DataTemplate>
                </ListView.ItemTemplate>
              </ListView>
       </ScrollView>
    </StackLayout>
</ContentPage>
